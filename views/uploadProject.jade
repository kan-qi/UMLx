        // Page1
        #page1
          .alert.alert-info
            | Project Information
          .form-group
            label.control-label(style='text-align:left').col-xs-2(for='uml-model-name') Project Name
            .col-xs-10
              input#uml-model-name.form-control(type='text', placeholder='Project Name', name='uml-model-name')
            input#uml-model-type(type='hidden', name='uml-model-type', value='uml')
            input#repo-id(type='hidden', name='repo-id', value='598c93a9a9813b12105c953e')
          .form-group
              label.control-label(style='text-align:left').col-xs-2(for='project-desc') Project Description
