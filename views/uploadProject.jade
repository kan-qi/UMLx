    script(type='text/javascript').
        document.getElementById("uuid-page1").value = uuidv1();
        document.getElementById("uuid-page2").value = uuidv1();
        document.getElementById("uuid-page3").value = uuidv1();
        document.getElementById("uuid-page4").value = uuidv1();
    script.
        function showPage(pageNumer) {
            for (var i = 1; i <= 4; i++) {
                var classList = document.getElementById("page" + i).classList;
                if (i != pageNumer) {
                    classList.add("hidden");
                } else {
                    classList.remove("hidden");
                }
            }
        }

