html
    head
        title UMLx
        link(href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css', rel='stylesheet')
        link(href='css/style.css', rel='stylesheet')

    body#upload-body
        include banner
        .container
            h2 KDM Model Recovery
            form#source-code-analysis-form.form-horizontal(novalidate='', method='post')
                .form-group
                    label.control-label.col-xs-4(for='config-file') Config File (file types: xml are supported)
                    .col-xs-8
                        input#config_file.form-control(type='file', name='config-file')
                div
                 button.btn.btn-success.pull-right(type='button', onclick="analyseSrc()") Submit
                div.clear
            #sec-5
                .panel-group
                    .panel.panel-default
                        .panel-heading
                            h4.panel-title
                                | File List
                        #collapse5.panel-collapse
                            button#backBtn.btn.btn-success.pull-right(type='button', data-url="" onclick="backToRepoConfig(this)") Back
                            button#reportBtn.btn.btn-success.pull-right(type='button', data-url="" onclick="genSrcReport(this)") Report
                            button#cocomoBtn.btn.btn-success.pull-right(type='button', data-url="" onclick="genCOCOMOReport(this)") COCOMO
                            button#analyseRepoBtn.btn.btn-success.pull-right(type='button', data-url="" onclick="analyseRepo(this)") AnalyseRepo
                            button#genRepoReportBtn.btn.btn-success.pull-right(type='button', data-url="" onclick="genRepoReport(this)") GenRepo
                            div(id="file-list-panel-body")
         #overlay-frame.modal.fade(role='dialog')
                  .modal-dialog(style="width:100%;height:200%;top:0;")
                     // Modal content
                     .modal-content
                         .modal-header
                             button.close(type='button', data-dismiss='modal') &#x2715;
                             h4.modal-title Modal Header
                         .modal-body(style="height: 400;text-align: center;")
                             p Some text in the modal.
                         .modal-footer
                             button.btn.btn-default(type='button', onclick='fileDownload()', style="position: relative;padding: 15px 32px;font-size: 16px;") Download
                             button.btn.btn-default(type='button', data-dismiss='modal',style="position: relative;padding: 15px 32px;font-size: 16px;") Close
        #dialog-frame.modal.fade(role='dialog')
                  .modal-dialog
                     // Modal content
                     .modal-content
                         .modal-header
                             button.close(type='button', data-dismiss='modal') &#x2715;
                             h4.modal-title Modal Header
                         .modal-body
                             p Some text in the modal.
                         .modal-footer
                             button.btn.btn-default(type='button', data-dismiss='modal') Close
        script(type='text/javascript', src='http://code.jquery.com/jquery-1.9.1.min.js')
        script(type='text/javascript', src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
        script(type='text/javascript', src="https://code.highcharts.com/highcharts.src.js")
        script(type='text/javascript', src="https://code.highcharts.com/modules/histogram-bellcurve.js")
        script(type='text/javascript', src='js/scripts.js')
        script(type='text/javascript', src="js/charts.js")
